Listen <STONEY-CLOUD-APACHE-VIP>:<STONEY-CLOUD-APACHE-PORT>

<VirtualHost <STONEY-CLOUD-APACHE-VIP>:<STONEY-CLOUD-APACHE-PORT>>
    ServerName <STONEY-CLOUD-APACHE-VIP-NAME>
    DocumentRoot "/var/www/localhost/htdocs"

    RewriteEngine on
    RewriteRule ^/$ /vm-manager/ [R]

    SSLEngine on
    SSLCipherSuite HIGH:MEDIUM
    SSLCertificateFile /etc/ssl/apache2/<STONEY-CLOUD-APACHE-CERTIFICATE-FILE>
    SSLCertificateKeyFile /etc/ssl/apache2/<STONEY-CLOUD-APACHE-CERTIFICATE-KEY-FILE>
    SSLCACertificateFile /etc/ssl/certs/FOSS-Cloud_CA.cert.pem

    <Files ~ "\.(cgi|shtml|phtml|php?)$">
        SSLOptions +StdEnvVars
    </Files>

    <Directory "/var/www/localhost/htdocs">
        SSLRequireSSL
        Options FollowSymLinks IncludesNOEXEC SymlinksIfOwnerMatch
        AllowOverride AuthConfig FileInfo Indexes Limit
        Order Allow,Deny
        Allow from all
    </Directory>
    
    <Directory "/var/www/localhost/htdocs/ca">
        Options -SymlinksIfOwnerMatch +Indexes
    </Directory>

    <Location />
        SSLRequireSSL
    </Location>

    <IfModule mod_setenvif.c>
        SetEnvIf User-Agent ".*MSIE.*" nokeepalive ssl-unclean-shutdown         downgrade-1.0 force-response-1.0
    </IfModule>

    Alias /FOSS-Cloud_CA.cert.pem /etc/ssl/certs/FOSS-Cloud_CA.cert.pem
    <Directory /etc/ssl/certs>
        Order allow,deny
        Allow from all
    </Directory>
</VirtualHost>
